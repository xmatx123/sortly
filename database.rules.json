{
    "rules": {
        "lobbies": {
            "$lobbyId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "gameStates": {
            "$lobbyId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "battleRoyaleGameStates": {
            "$lobbyId": {
                ".read": "auth != null",
                ".write": "auth != null"
            }
        },
        "users": {
            "$uid": {
                ".read": "auth != null && auth.uid === $uid",
                ".write": "auth != null && auth.uid === $uid"
            }
        }
    }
}